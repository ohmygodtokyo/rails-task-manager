<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>Task is completed</p>
<% else %>
  <p>Task is not completed</p>
<% end %>
<p><%= link_to 'Edit task', edit_task_path(@task), class: "btn btn-primary" %></p>
<%= link_to "Delete", task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-primary mb-3" %>
<p><%= link_to 'Back to list', tasks_path, class: "btn btn-primary" %></p>
